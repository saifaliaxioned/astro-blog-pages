---
import navPath from "../data/nav-url";
---

<header>
  <nav class="bg-black px-8 py-4 flex justify-between items-center">
    <h1 class="font-bold text-white text-3xl flex items-center"><img class="w-12" src="/favicon.svg" alt="logo img"> <a href="/">Astro Blog</a></h1>
    <ul class="flex justify-end gap-20">
      {
        navPath.map((el) => (
          <li class="relative group">
            <a href={el.path} title={el.name} class="block text-white group-hover:text-red-500">
              {el.name}
            </a>
            <span class="absolute top-[25px] rounded-full left-0 w-0 h-[3px] bg-white transition-all group-hover:w-full"></span>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
